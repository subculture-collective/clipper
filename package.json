{
  "name": "clipper-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "mobile",
    "shared"
  ],
  "scripts": {
    "mobile:start": "npm run start --workspace=mobile",
    "mobile:android": "npm run android --workspace=mobile",
    "mobile:ios": "npm run ios --workspace=mobile",
    "mobile:test": "npm run test --workspace=mobile",
    "mobile:lint": "npm run lint --workspace=mobile",
    "shared:build": "npm run build --workspace=shared",
    "install:all": "npm install && npm run shared:build",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11"
  },
  "lint-staged": {
    "mobile/**/*.{js,jsx,ts,tsx}": [
      "npm run lint --workspace=mobile -- --fix"
    ],
    "shared/**/*.{js,ts}": [
      "npm run lint --workspace=shared -- --fix"
    ]
  }
}
