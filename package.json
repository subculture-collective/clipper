{
  "name": "clipper-docs",
  "private": true,
  "scripts": {
    "docs:toc": "doctoc --notitle --maxlevel 3 README.md",
    "docs:lint": "markdownlint-cli2 \"docs/**/*.md\" \"README.md\" \"!node_modules\"",
    "docs:spell": "cspell --no-progress \"docs/**/*.md\" \"README.md\" --config .cspell.json",
    "docs:links": "lychee --accept 200,206,429 --retry-wait 2 --max-redirects 5 --timeout 20 --exclude-file .lycheeignore docs README.md",
    "docs:anchors": "node scripts/check-anchors.js",
    "docs:orphans": "node scripts/check-orphans.js",
    "docs:assets": "node scripts/check-unused-assets.js",
    "docs:check": "npm-run-all -l -s docs:lint docs:spell docs:links docs:anchors docs:orphans docs:assets"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "cspell": "^8.11.0",
    "doctoc": "^2.2.1",
    "glob": "^10.3.10",
    "markdownlint-cli2": "^0.20.0",
    "npm-run-all": "^4.1.5"
  }
}
