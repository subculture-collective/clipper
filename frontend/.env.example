# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Twitch Configuration (for OAuth redirects)
VITE_TWITCH_CLIENT_ID=your-twitch-client-id

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/test/products
VITE_STRIPE_PRO_MONTHLY_PRICE_ID=price_your_monthly_price_id
VITE_STRIPE_PRO_YEARLY_PRICE_ID=price_your_yearly_price_id

# Sentry Configuration
# Get DSN from: https://sentry.io/ (create a new project for frontend)
# Leave VITE_SENTRY_ENABLED=false for development unless testing error tracking
VITE_SENTRY_ENABLED=false
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_RELEASE=
# Sample rate for performance monitoring (0.0 to 1.0)
# Set to 1.0 for development, lower in production (e.g., 0.1 = 10%)
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0
