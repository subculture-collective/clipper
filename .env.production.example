# Production Environment Variables
# Copy this file to .env on your production server and fill in the values

# Database Configuration
POSTGRES_DB=clipper
POSTGRES_USER=clipper
POSTGRES_PASSWORD=CHANGEME_SECURE_PASSWORD_HERE

# Connection URLs (generated from above)
DATABASE_URL=postgres://clipper:CHANGEME_SECURE_PASSWORD_HERE@postgres:5432/clipper?sslmode=disable
REDIS_URL=redis://redis:6379

# Application Configuration
PORT=8080
GIN_MODE=release

# Twitch API (if needed)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# JWT Secret (if needed)
JWT_SECRET=CHANGEME_SECURE_JWT_SECRET_HERE

# CORS Origins (comma-separated)
CORS_ORIGINS=https://clipper.example.com,https://www.clipper.example.com
