# Production Environment Variables
# Copy this file to .env on your production server and fill in the values

# Database Configuration
POSTGRES_DB=clipper_db
POSTGRES_USER=clipper
POSTGRES_PASSWORD=CHANGEME_SECURE_PASSWORD_HERE

# Backend connection settings
# These are used by the backend service to connect to Postgres/Redis inside the Docker network
DB_HOST=postgres
DB_PORT=5432
DB_USER=clipper
DB_PASSWORD=CHANGEME_SECURE_PASSWORD_HERE
DB_NAME=clipper_db

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
PORT=8080
GIN_MODE=release

# Twitch API (if needed)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# JWT Secret (if needed)
JWT_SECRET=CHANGEME_SECURE_JWT_SECRET_HERE

# CORS Origins (comma-separated)
CORS_ORIGINS=https://clipper.example.com,https://www.clipper.example.com
