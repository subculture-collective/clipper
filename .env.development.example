# Development environment example (sanitized)
# Copy to .env for local dev and fill secrets/keys as needed.

# ---------------------------------------------------------------------------
# Database (local dev via docker-compose.yml)
# ---------------------------------------------------------------------------
POSTGRES_DB=clipper_db
POSTGRES_USER=clipper
POSTGRES_PASSWORD=clipper_password

DB_HOST=localhost
DB_PORT=5436
DB_USER=clipper
DB_PASSWORD=clipper_password
DB_NAME=clipper_db
DB_SSLMODE=disable

# ---------------------------------------------------------------------------
# Redis (local dev)
# ---------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ---------------------------------------------------------------------------
# OpenSearch (local dev)
# ---------------------------------------------------------------------------
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_INSECURE_SKIP_VERIFY=true

# ---------------------------------------------------------------------------
# Application
# ---------------------------------------------------------------------------
PORT=8080
GIN_MODE=debug
ENVIRONMENT=development
BASE_URL=http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ---------------------------------------------------------------------------
# Security / Auth
# ---------------------------------------------------------------------------
# Paste dev/test RSA keys here (never commit real prod keys)
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=
# 32-byte key required
MFA_ENCRYPTION_KEY=

# ---------------------------------------------------------------------------
# Features & third-party integrations
# ---------------------------------------------------------------------------
FEATURE_SEMANTIC_SEARCH=true
OPENAI_API_KEY=

# Stripe (leave blank or use test keys only)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_MONTHLY_PRICE_ID=
STRIPE_PRO_YEARLY_PRICE_ID=

# SendGrid (optional in dev)
SENDGRID_API_KEY=

# Sentry (typically disabled in dev)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=false

# Twitch (use dev app credentials)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URI=http://localhost:8080/api/v1/auth/twitch/callback

# Karma defaults
KARMA_INITIAL_POINTS=100
KARMA_SUBMISSION_REQUIRED=100
KARMA_REQUIRE_FOR_SUBMISSION=true

# ---------------------------------------------------------------------------
# Rate Limiting (optional, defaults are secure)
# ---------------------------------------------------------------------------
# Whitelist IPs that bypass rate limiting (comma-separated, for development/testing only)
# Localhost (127.0.0.1, ::1) is always whitelisted
# Example: RATE_LIMIT_WHITELIST_IPS=192.168.1.100,10.0.0.50
RATE_LIMIT_WHITELIST_IPS=
