# Server Configuration
PORT=8080
GIN_MODE=debug

# Database Configuration
# For Docker (running backend in container)
DB_HOST=clipper-postgres
DB_PORT=5432
DB_USER=clipper
DB_PASSWORD=clipper_password
DB_NAME=clipper_db
DB_SSLMODE=disable

# Redis Configuration
# For Docker (running backend in container)
REDIS_HOST=clipper-redis
REDIS_PORT=6379
