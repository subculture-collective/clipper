{
  "manifest_version": 3,
  "name": "Clipper - Share Twitch Clips",
  "short_name": "Clipper",
  "description": "Share Twitch clips to Clipper with one click. Pre-filled metadata, tag selection, and instant submission.",
  "version": "1.0.0",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "notifications",
    "cookies"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*/clip/*",
    "https://clips.twitch.tv/*",
    "https://api.clipper.gg/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*/clip/*",
        "https://clips.twitch.tv/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Share to Clipper",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@clipper.gg",
      "strict_min_version": "109.0"
    }
  }
}
