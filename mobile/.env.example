# ============================================================================
# Clipper Mobile App Environment Variables (Development Example)
# Copy to .env and fill values. Do not commit real secrets.
# ============================================================================

# API Base URL
EXPO_PUBLIC_API_URL=http://localhost:8080/api/v1

# Twitch OAuth Configuration
# Get your Twitch Client ID from: https://dev.twitch.tv/console/apps
# Ensure custom redirect (e.g., clipper://auth) is added in Twitch settings
EXPO_PUBLIC_TWITCH_CLIENT_ID=your_twitch_client_id_here

# Expo Project ID (needed for push notifications)
EXPO_PUBLIC_PROJECT_ID=your_expo_project_id_here

# Analytics Configuration
# Enable analytics tracking (set to true in production)
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# PostHog Configuration (for product analytics)
# Get from: https://app.posthog.com/project/settings
EXPO_PUBLIC_POSTHOG_API_KEY=
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Configuration (for crash reporting and error tracking)
# Get from: https://sentry.io/settings/[org]/projects/[project]/keys/
EXPO_PUBLIC_SENTRY_DSN=
EXPO_PUBLIC_SENTRY_ENVIRONMENT=development
EXPO_PUBLIC_SENTRY_ENABLED=false
