{
  "dashboard": {
    "title": "PgBouncer Connection Pool",
    "tags": ["clipper", "database", "pgbouncer", "connection-pool"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Active Client Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "pgbouncer_pools_cl_active{database=\"clipper_db\"}",
            "legendFormat": "Active Clients",
            "refId": "A"
          },
          {
            "expr": "pgbouncer_pools_cl_waiting{database=\"clipper_db\"}",
            "legendFormat": "Waiting Clients",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 40, "color": "yellow"},
                {"value": 45, "color": "red"}
              ]
            }
          }
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [45],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Client connections approaching limit",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Server Connections to PostgreSQL",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "pgbouncer_pools_sv_active{database=\"clipper_db\"}",
            "legendFormat": "Active Server Connections",
            "refId": "A"
          },
          {
            "expr": "pgbouncer_pools_sv_idle{database=\"clipper_db\"}",
            "legendFormat": "Idle Server Connections",
            "refId": "B"
          },
          {
            "expr": "pgbouncer_pools_sv_used{database=\"clipper_db\"}",
            "legendFormat": "Used Server Connections",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 40, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Pool Size vs Limits",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "pgbouncer_databases_pool_size{database=\"clipper_db\"}",
            "legendFormat": "Current Pool Size",
            "refId": "A"
          },
          {
            "expr": "pgbouncer_databases_max_connections{database=\"clipper_db\"}",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Pool Size"},
          {"format": "short"}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "blue"},
                {"value": 50, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Query Rate (queries/sec)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(pgbouncer_stats_queries_total{database=\"clipper_db\"}[5m])",
            "legendFormat": "Queries per second",
            "refId": "A"
          },
          {
            "expr": "rate(pgbouncer_stats_queries_pooled{database=\"clipper_db\"}[5m])",
            "legendFormat": "Pooled queries per second",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Queries/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Average Query Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(pgbouncer_stats_queries_duration_microseconds{database=\"clipper_db\"}[5m]) / rate(pgbouncer_stats_queries_total{database=\"clipper_db\"}[5m]) / 1000",
            "legendFormat": "Avg Query Duration (ms)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Duration"},
          {"format": "short"}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 200, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Connection Wait Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(pgbouncer_stats_waiting_duration_microseconds{database=\"clipper_db\"}[5m]) / 1000",
            "legendFormat": "Avg Wait Time (ms)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Wait Time"},
          {"format": "short"}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [50],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High connection wait time",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "Total Client Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(pgbouncer_pools_cl_active{database=\"clipper_db\"}) + sum(pgbouncer_pools_cl_waiting{database=\"clipper_db\"})",
            "legendFormat": "Total Clients",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 400, "color": "yellow"},
                {"value": 480, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "Pool Utilization %",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "(pgbouncer_pools_sv_active{database=\"clipper_db\"} / 50) * 100",
            "legendFormat": "Utilization",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 9,
        "title": "Waiting Clients (Queue)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "pgbouncer_pools_cl_waiting{database=\"clipper_db\"}",
            "legendFormat": "Waiting",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Connection Errors",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "rate(pgbouncer_errors_count{database=\"clipper_db\"}[5m])",
            "legendFormat": "Errors/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "ops"
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
