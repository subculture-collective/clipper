{
  "dashboard": {
    "title": "Background Jobs Monitoring",
    "uid": "background-jobs",
    "timezone": "utc",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "tags": ["jobs", "scheduler", "background"],
    "panels": [
      {
        "id": 1,
        "title": "Job Execution Status Overview",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(job_execution_total{status=\"success\"}[5m])) * 60",
            "legendFormat": "Success/min",
            "refId": "A"
          },
          {
            "expr": "sum(rate(job_execution_total{status=\"failed\"}[5m])) * 60",
            "legendFormat": "Failures/min",
            "refId": "B"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Job Success Rate (%)",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 4, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "(sum(rate(job_execution_total{status=\"success\"}[5m])) / (sum(rate(job_execution_total[5m])) + 0.001)) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Job Queue Sizes",
        "type": "timeseries",
        "gridPos": {"x": 8, "y": 4, "w": 16, "h": 6},
        "targets": [
          {
            "expr": "job_queue_size",
            "legendFormat": "{{ job_name }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "right", "calcs": ["last", "max"]}
        }
      },
      {
        "id": 4,
        "title": "Job Execution Rate by Job",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(job_execution_total{status=\"success\"}[5m])",
            "legendFormat": "{{ job_name }} (success)",
            "refId": "A"
          },
          {
            "expr": "rate(job_execution_total{status=\"failed\"}[5m])",
            "legendFormat": "{{ job_name }} (failed)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*failed.*"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "mean"]}
        }
      },
      {
        "id": 5,
        "title": "Job Duration (P95) by Job",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 10, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(job_execution_duration_seconds_bucket[5m])) by (job_name, le))",
            "legendFormat": "{{ job_name }} (P95)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(job_execution_duration_seconds_bucket[5m])) by (job_name, le))",
            "legendFormat": "{{ job_name }} (P50)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "max"]}
        }
      },
      {
        "id": 6,
        "title": "Time Since Last Successful Run",
        "type": "stat",
        "gridPos": {"x": 0, "y": 18, "w": 24, "h": 5},
        "targets": [
          {
            "expr": "(time() - job_last_success_timestamp_seconds) / 60",
            "legendFormat": "{{ job_name }}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "justifyMode": "auto",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 120, "color": "yellow"},
                {"value": 360, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Items Processed Rate by Job",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 23, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(job_items_processed_total{status=\"success\"}[5m])",
            "legendFormat": "{{ job_name }} (success)",
            "refId": "A"
          },
          {
            "expr": "rate(job_items_processed_total{status=\"failed\"}[5m])",
            "legendFormat": "{{ job_name }} (failed)",
            "refId": "B"
          },
          {
            "expr": "rate(job_items_processed_total{status=\"skipped\"}[5m])",
            "legendFormat": "{{ job_name }} (skipped)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*failed.*"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*skipped.*"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "mean", "total"]}
        }
      },
      {
        "id": 8,
        "title": "Job Failure Rate by Job",
        "type": "bargauge",
        "gridPos": {"x": 12, "y": 23, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(rate(job_execution_total{status=\"failed\"}[10m]) / (rate(job_execution_total[10m]) + 0.001)) * 100",
            "legendFormat": "{{ job_name }}",
            "refId": "A",
            "instant": true
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Job Execution Heatmap",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 31, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(job_execution_duration_seconds_bucket[5m])) by (le, job_name)",
            "legendFormat": "{{ job_name }}",
            "refId": "A",
            "format": "heatmap"
          }
        ],
        "options": {
          "calculate": true,
          "color": {
            "mode": "scheme",
            "scheme": "Spectral"
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Job Execution Details Table",
        "type": "table",
        "gridPos": {"x": 0, "y": 39, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum by (job_name) (rate(job_execution_total{status=\"success\"}[5m])) * 60",
            "legendFormat": "",
            "refId": "A",
            "instant": true,
            "format": "table"
          },
          {
            "expr": "sum by (job_name) (rate(job_execution_total{status=\"failed\"}[5m])) * 60",
            "legendFormat": "",
            "refId": "B",
            "instant": true,
            "format": "table"
          },
          {
            "expr": "histogram_quantile(0.95, sum by (job_name, le) (rate(job_execution_duration_seconds_bucket[5m])))",
            "legendFormat": "",
            "refId": "C",
            "instant": true,
            "format": "table"
          },
          {
            "expr": "(time() - job_last_success_timestamp_seconds) / 60",
            "legendFormat": "",
            "refId": "D",
            "instant": true,
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "Value #A": "Success/min",
                "Value #B": "Failures/min",
                "Value #C": "P95 Duration (s)",
                "Value #D": "Time Since Success (min)",
                "job_name": "Job Name"
              }
            }
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Success/min"},
              "properties": [
                {"id": "unit", "value": "ops"},
                {"id": "decimals", "value": 2},
                {"id": "custom.displayMode", "value": "color-background"},
                {"id": "thresholds", "value": {
                  "mode": "absolute",
                  "steps": [
                    {"value": null, "color": "dark-red"},
                    {"value": 0.01, "color": "green"}
                  ]
                }}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Failures/min"},
              "properties": [
                {"id": "unit", "value": "ops"},
                {"id": "decimals", "value": 2},
                {"id": "custom.displayMode", "value": "color-background"},
                {"id": "thresholds", "value": {
                  "mode": "absolute",
                  "steps": [
                    {"value": null, "color": "green"},
                    {"value": 0.01, "color": "yellow"},
                    {"value": 0.1, "color": "red"}
                  ]
                }}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "P95 Duration (s)"},
              "properties": [
                {"id": "unit", "value": "s"},
                {"id": "decimals", "value": 1},
                {"id": "custom.displayMode", "value": "color-background"},
                {"id": "thresholds", "value": {
                  "mode": "absolute",
                  "steps": [
                    {"value": null, "color": "green"},
                    {"value": 60, "color": "yellow"},
                    {"value": 300, "color": "red"}
                  ]
                }}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Time Since Success (min)"},
              "properties": [
                {"id": "unit", "value": "m"},
                {"id": "decimals", "value": 0},
                {"id": "custom.displayMode", "value": "color-background"},
                {"id": "thresholds", "value": {
                  "mode": "absolute",
                  "steps": [
                    {"value": null, "color": "green"},
                    {"value": 120, "color": "yellow"},
                    {"value": 360, "color": "red"}
                  ]
                }}
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
