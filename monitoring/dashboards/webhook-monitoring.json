{
  "dashboard": {
    "title": "Webhook Monitoring Dashboard",
    "tags": [
      "clipper",
      "webhooks",
      "monitoring"
    ],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Webhook Delivery Success Rate",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "(sum(rate(webhook_delivery_total{status=\"success\"}[5m])) / sum(rate(webhook_delivery_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 90,
                  "color": "yellow"
                },
                {
                  "value": 95,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Webhook Subscriptions",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "webhook_subscriptions_active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "gray"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Retry Queue Size",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "webhook_retry_queue_size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 100,
                  "color": "yellow"
                },
                {
                  "value": 500,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Dead Letter Queue Size",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "webhook_dead_letter_queue_size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 10,
                  "color": "yellow"
                },
                {
                  "value": 50,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Webhook Delivery Rate by Status",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "sum(rate(webhook_delivery_total{status=\"success\"}[5m]))",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(webhook_delivery_total{status=\"failed\"}[5m]))",
            "legendFormat": "Failed",
            "refId": "B"
          },
          {
            "expr": "sum(rate(webhook_delivery_total{status=\"retry\"}[5m]))",
            "legendFormat": "Retry",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Deliveries/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Webhook Failure Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "(sum(rate(webhook_delivery_total{status=\"failed\"}[5m])) / sum(rate(webhook_delivery_total[5m]))) * 100",
            "legendFormat": "Failure Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "min": 0,
            "max": 100
          },
          {
            "format": "short"
          }
        ],
        "thresholds": [
          {
            "value": 10,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 10,
                  "color": "yellow"
                },
                {
                  "value": 50,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Webhook Delivery Latency (P50, P95, P99)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(webhook_delivery_duration_seconds_bucket{status=\"success\"}[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(webhook_delivery_duration_seconds_bucket{status=\"success\"}[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(webhook_delivery_duration_seconds_bucket{status=\"success\"}[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Latency"
          },
          {
            "format": "short"
          }
        ],
        "thresholds": [
          {
            "value": 5,
            "colorMode": "critical",
            "op": "gt",
            "fill": false,
            "line": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 2,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Webhook HTTP Status Codes",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum(rate(webhook_http_status_code_total[5m])) by (status_code)",
            "legendFormat": "{{ status_code }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "title": "Webhook Deliveries by Event Type",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "sum(rate(webhook_delivery_total[5m])) by (event_type)",
            "legendFormat": "{{ event_type }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "title": "Webhook Retry Attempts Distribution",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        },
        "targets": [
          {
            "expr": "sum(rate(webhook_retry_attempts_count[5m])) by (final_status)",
            "legendFormat": "{{ final_status }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 11,
        "title": "Retry Queue and DLQ Size Over Time",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        },
        "targets": [
          {
            "expr": "webhook_retry_queue_size",
            "legendFormat": "Retry Queue",
            "refId": "A"
          },
          {
            "expr": "webhook_dead_letter_queue_size",
            "legendFormat": "Dead Letter Queue",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Queue Size"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 12,
        "title": "DLQ Movement Rate by Reason",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        },
        "targets": [
          {
            "expr": "sum(rate(webhook_dlq_movements_total[5m])) by (reason)",
            "legendFormat": "{{ reason }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 13,
        "title": "Time to Successful Delivery (P95)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 36
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(webhook_time_to_success_seconds_bucket[5m])) by (le, event_type))",
            "legendFormat": "{{ event_type }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Time to Success"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 14,
        "title": "Webhook Retry Rate by Attempt Number",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 36
        },
        "targets": [
          {
            "expr": "sum(rate(webhook_retry_total[5m])) by (retry_number)",
            "legendFormat": "Attempt {{ retry_number }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 15,
        "title": "Top 10 Subscriptions by Delivery Volume",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 44
        },
        "targets": [
          {
            "expr": "topk(10, sum(rate(webhook_subscription_delivery_total[5m])) by (subscription_id))",
            "legendFormat": "{{ subscription_id }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 16,
        "title": "Subscription Health (Success vs Failed)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 44
        },
        "targets": [
          {
            "expr": "sum(rate(webhook_subscription_delivery_total{status=\"success\"}[5m])) by (subscription_id)",
            "legendFormat": "Success - {{ subscription_id }}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(webhook_subscription_delivery_total{status=\"failed\"}[5m])) by (subscription_id)",
            "legendFormat": "Failed - {{ subscription_id }}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 17,
        "title": "Consecutive Failures by Subscription",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 52
        },
        "targets": [
          {
            "expr": "topk(10, webhook_consecutive_failures > 0)",
            "legendFormat": "{{ subscription_id }} - {{ event_type }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Consecutive Failures"
          },
          {
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "type": "gt",
                "params": [
                  5
                ]
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": [
                  "A",
                  "5m",
                  "now"
                ]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Consecutive Failures",
          "noDataState": "no_data",
          "notifications": []
        }
      }
    ],
    "uid": "webhook-monitoring"
  }
}