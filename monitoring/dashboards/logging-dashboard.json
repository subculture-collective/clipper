{
  "dashboard": {
    "title": "Centralized Logging Dashboard",
    "tags": ["logging", "observability"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "title": "Log Volume by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate({job=~\"backend|frontend|mobile\"} [5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Logs/sec"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "title": "Log Levels Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(count_over_time({job=~\"backend|frontend|mobile\"} [1h])) by (level)",
            "legendFormat": "{{level}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "title": "Error Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate({level=\"error\"} [5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Errors/sec"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "title": "Recent Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{level=\"error\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 28
        },
        "title": "All Logs (Live Tail)",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=~\"backend|frontend|mobile\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 40
        },
        "title": "Top Error Messages",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, count by (message) (count_over_time({level=\"error\"} | json [1h])))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 40
        },
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate({message=~\".*(?i)(authentication failed|unauthorized|forbidden).*\"} [5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Events/sec"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(service)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "level",
          "type": "query",
          "query": "label_values(level)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
