{
  "dashboard": {
    "title": "Abuse Pattern Detection & Moderation Analytics",
    "description": "Real-time monitoring of abuse detection, anomaly scoring, and moderation queue metrics",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "tags": ["moderation", "abuse-detection", "security"],
    "panels": [
      {
        "id": 1,
        "title": "Anomaly Detection Overview",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(abuse_anomalies_detected_total)",
            "legendFormat": "Total Anomalies Detected"
          },
          {
            "expr": "sum(abuse_auto_flagged_total)",
            "legendFormat": "Auto-Flagged Items"
          },
          {
            "expr": "avg(abuse_false_positive_rate)",
            "legendFormat": "False Positive Rate"
          }
        ],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {
              "value": 0,
              "color": "green"
            },
            {
              "value": 0.02,
              "color": "yellow"
            },
            {
              "value": 0.05,
              "color": "red"
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Anomalies by Action Type (24h)",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (action_type) (abuse_anomalies_detected_total)",
            "legendFormat": "{{action_type}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Anomaly Severity Distribution",
        "type": "piechart",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (severity) (abuse_severity_count)",
            "legendFormat": "{{severity}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Anomaly Detection Rate",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(abuse_anomalies_detected_total[5m])",
            "legendFormat": "{{action_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "False Positive Rate (FPR)",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "abuse_false_positive_rate",
            "legendFormat": "FPR"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "max": 0.05,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 0.02,
                  "color": "yellow"
                },
                {
                  "value": 0.03,
                  "color": "red"
                }
              ]
            }
          }
        },
        "alert": {
          "name": "High False Positive Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [0.02],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "message": "False positive rate has exceeded 2% threshold. Review auto-flagging rules.",
          "noDataState": "no_data",
          "notifications": [
            {
              "uid": "moderation-team"
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Moderation Queue Status",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 28,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "moderation_queue_pending_count",
            "legendFormat": "Pending Items"
          }
        ],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {
              "value": 0,
              "color": "green"
            },
            {
              "value": 50,
              "color": "yellow"
            },
            {
              "value": 100,
              "color": "red"
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Auto-Flagged by Content Type",
        "type": "stat",
        "gridPos": {
          "x": 8,
          "y": 28,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum by (content_type) (abuse_auto_flagged_total)",
            "legendFormat": "{{content_type}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Review Throughput",
        "type": "stat",
        "gridPos": {
          "x": 16,
          "y": 28,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(moderation_queue_reviewed_total[1h])",
            "legendFormat": "Reviews/hour"
          }
        ]
      },
      {
        "id": 9,
        "title": "Feature Scores Distribution",
        "type": "heatmap",
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "abuse_feature_score_bucket",
            "legendFormat": "{{feature_name}}"
          }
        ],
        "dataFormat": "timeseries",
        "yAxis": {
          "format": "short",
          "logBase": 1
        }
      },
      {
        "id": 10,
        "title": "IP/UA Signals",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "abuse_ip_shared_users_count",
            "legendFormat": "Shared IP Users"
          },
          {
            "expr": "abuse_ip_hopping_detected_total",
            "legendFormat": "IP Hopping Events"
          }
        ]
      },
      {
        "id": 11,
        "title": "Coordinated Activity Detection",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 40,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "abuse_coordinated_voting_detected_total",
            "legendFormat": "Coordinated Voting"
          },
          {
            "expr": "abuse_circular_follow_detected_total",
            "legendFormat": "Circular Follow Patterns"
          }
        ]
      },
      {
        "id": 12,
        "title": "Burst Activity Detection",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 40,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(abuse_burst_activity_detected_total[5m])",
            "legendFormat": "{{action_type}}"
          }
        ]
      },
      {
        "id": 13,
        "title": "Average Confidence Score",
        "type": "gauge",
        "gridPos": {
          "x": 0,
          "y": 48,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "avg(abuse_confidence_score)",
            "legendFormat": "Confidence"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 0.6,
                  "color": "yellow"
                },
                {
                  "value": 0.8,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "Moderation Response Time",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 48,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(moderation_review_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(moderation_review_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(moderation_review_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 15,
        "title": "System Health",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 56,
          "w": 24,
          "h": 6
        },
        "targets": [
          {
            "expr": "abuse_detection_healthy",
            "legendFormat": "Abuse Detection",
            "format": "table"
          },
          {
            "expr": "moderation_queue_healthy",
            "legendFormat": "Moderation Queue",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "Value": "Status",
                "__name__": "Component"
              }
            }
          }
        ]
      }
    ]
  }
}
