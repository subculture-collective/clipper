{
  "dashboard": {
    "title": "Resource Quotas & Limits Dashboard",
    "tags": ["clipper", "kubernetes", "quotas", "limits", "resources"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"ResourceQuota.*|.*OOM.*|.*Throttling\"}",
          "iconColor": "red",
          "name": "Resource Alerts",
          "tagKeys": "alertname,severity",
          "textFormat": "{{ alertname }}: {{ $labels.description }}",
          "titleFormat": "Alert"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "CPU Quota Usage by Namespace",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "(kube_resourcequota{resource=\"requests.cpu\", type=\"used\"} / kube_resourcequota{resource=\"requests.cpu\", type=\"hard\"}) * 100",
            "legendFormat": "{{ namespace }} CPU",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 80, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Memory Quota Usage by Namespace",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(kube_resourcequota{resource=\"requests.memory\", type=\"used\"} / kube_resourcequota{resource=\"requests.memory\", type=\"hard\"}) * 100",
            "legendFormat": "{{ namespace }} Memory",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 80, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Pod Count vs Quota",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "kube_resourcequota{resource=\"pods\", type=\"used\"}",
            "legendFormat": "{{ namespace }} Used",
            "refId": "A"
          },
          {
            "expr": "kube_resourcequota{resource=\"pods\", type=\"hard\"}",
            "legendFormat": "{{ namespace }} Limit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Storage Quota Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "(kube_resourcequota{resource=\"requests.storage\", type=\"used\"} / kube_resourcequota{resource=\"requests.storage\", type=\"hard\"}) * 100",
            "legendFormat": "{{ namespace }} Storage",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 85, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 5,
        "title": "Container Memory Usage vs Limits",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "(container_memory_working_set_bytes{container!=\"\", container!=\"POD\"} / container_spec_memory_limit_bytes{container!=\"\", container!=\"POD\"}) * 100",
            "legendFormat": "{{ namespace }}/{{ pod }}/{{ container }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 90, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Container CPU Throttling Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum by (namespace, pod, container) (rate(container_cpu_cfs_throttled_seconds_total{container!=\"\", container!=\"POD\"}[5m]))",
            "legendFormat": "{{ namespace }}/{{ pod }}/{{ container }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0.25, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ],
        "description": "Seconds throttled per second. Values > 0.25 indicate significant throttling."
      },
      {
        "id": 7,
        "title": "OOM Killed Containers (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total[1h]) and on(namespace, pod, container) kube_pod_container_status_last_terminated_reason{reason=\"OOMKilled\"} == 1)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Quota Violations (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(ALERTS{alertname=~\"ResourceQuota.*\"}[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "PVC Count vs Quota",
        "type": "graph",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "kube_resourcequota{resource=\"persistentvolumeclaims\", type=\"used\"}",
            "legendFormat": "{{ namespace }} Used",
            "refId": "A"
          },
          {
            "expr": "kube_resourcequota{resource=\"persistentvolumeclaims\", type=\"hard\"}",
            "legendFormat": "{{ namespace }} Limit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "CPU Throttling Events (Top 10)",
        "type": "table",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "topk(10, sum by (namespace, pod, container) (rate(container_cpu_cfs_throttled_seconds_total{container!=\"\", container!=\"POD\"}[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "pod": "Pod",
                "container": "Container",
                "Value": "Throttled (s/s)"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "title": "Resource Quota Details by Namespace",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "kube_resourcequota{type=\"used\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "kube_resourcequota{type=\"hard\"}",
            "format": "table",
            "instant": true,
            "refId": "B"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "job": true, "instance": true},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "resource": "Resource",
                "type": "Type"
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "title": "LimitRange Constraints",
        "type": "table",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 36},
        "description": "Container resource limit constraints per namespace",
        "targets": [
          {
            "expr": "kube_limitrange{type=\"Container\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "job": true, "instance": true},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "limitrange": "LimitRange",
                "resource": "Resource",
                "constraint": "Constraint"
              }
            }
          }
        ]
      }
    ]
  }
}
