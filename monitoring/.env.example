# Monitoring Stack Environment Variables
# Copy this to .env and fill in your values
# Generate secure passwords with: openssl rand -base64 32

# Grafana Configuration
GRAFANA_PASSWORD=changeme_secure_password

# Database Configuration (for connecting to main Clipper DB)
POSTGRES_USER=clipper
POSTGRES_PASSWORD=changeme_db_password
POSTGRES_DB=clipper_db

# Redis Configuration (if using Redis exporter with password)
REDIS_PASSWORD=

# Metabase Configuration
# Metabase uses a separate PostgreSQL database for its metadata
METABASE_DB_NAME=metabase
METABASE_DB_USER=metabase
METABASE_DB_PASSWORD=changeme_metabase_password

# Optional: Alertmanager Configuration
# ALERTMANAGER_SLACK_WEBHOOK_URL=
# ALERTMANAGER_PAGERDUTY_SERVICE_KEY=
# ALERTMANAGER_EMAIL_FROM=
# ALERTMANAGER_EMAIL_SMARTHOST=
